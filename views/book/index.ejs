<h1> All Books</h1>
<a href="./books/new">Add New book</a>

<div class="container">
    <div class="row">
    <% books.forEach(book => { %>
       <div class="col-md-auto">
            <a href="/books/<%= book.id %>"> <img  class="img-responsive" src="data:image/<%=book.image.contentType%>;base64, 
            <%=book.image.data.toString('base64')%>" style="height:280px;width:250px;"/></a><br>
            <a href="/books/<%= book.id %>"><%= book.title %></a>
            <br>
            Price: $61
            <br><br><br>
        </div>
    <% }) %>
</div>
</div>

 