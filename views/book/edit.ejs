


    <h1> Update A Book</h1>

 <div class="container-fluid">     
   <div class="row text-left">
        <!-- Left panel -->
     <div class="col-sm-4" style="background-color:#95A5A6;">
            <img src="data:image/<%=book.image.contentType%>;base64, 
    <%=book.image.data.toString('base64')%>" class="col-md-auto"/>
    </div>
    <div class="col-sm-4" style="background-color:#BFC9CA;"> 
    <form action="/books/<%=book._id%>?_method=PUT" method="POST">

      <!-- Middle panel -->
      
        <div class="form-group">
          <label for="title">Book Title</label>
          <input type="text" class="form-control" id="title" name="title" value="<%= book.title %>" />
          <br><br>
            <label for="image">Upload Image</label>
            <input type="text" class="form-control" id="image" name="image" value="<%= book.image %>" />
         </div>
        <% authors.forEach(author => { %>
            <div>
                <label for="<%= author.name%>">
                  <input type="checkbox"
                   id="<%= author.name %>"
                    name="authors" 
                    value="<%= author.id %>" 
                    <% book.authors.forEach(bAuthor => { %>
                        <% if(bAuthor.name === author.name){ %>
                            checked
                          <% } %>
                    <% }) %>
                    />
                  <span><%= author.name %> </span>
                </label>
              </div>
        <% })%>
            </div>
    <div class="col-sm-4" style="background-color:#95A5A6;">
        <br>
        <a href="/books" class="btn btn-primary btn-block">Home Page</a> <br>
        <a href="/books/<%= book.id%> " class="btn btn-primary btn-block">Previous</a><br>
        <button type="submit" class="btn btn-primary btn-block">Update</button>
        </div>
      </form>
      </div>
   </div>