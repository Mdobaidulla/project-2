<h1>Your Order's Details</h1>
<table class="table">
    <tbody>
      <tr class="d-flex">
        <th class="col-sm-2">
            Image
        </th>
        <th class="col-sm-3">
            Name
        </th>
        <th class="col-sm-3">
            Qut
        </th>
        <th class="col-sm-2">
            Price
        </th>

        <th class="col-sm-2">
          Button
        </th>
    </tr>
<% books.forEach(book => {%>
    <% carts.forEach((cart, index )=> {%>
        <% if(book.id == cart.bookid) {%> 
            <tr class="d-flex">
                <td class="col-sm-2">
                <img  class="img-responsive" src="data:image/<%=book.image.contentType%>;base64, 
                    <%=book.image.data.toString('base64')%>" style="height:50px;width:40px;"/>
                 </td>
                <td class="col-sm-3">
                    <%= book.title %>
                </td>
                <td class="col-sm-3"> 
                    $<%= book.price %> &times; <%= cart.quantity %>
                </td>
                <td class="col-sm-2"> 
                    $<%= book.price * cart.quantity%>
                </td>
        
           </tr>
        <%}%>
    <%});%> 
<%});%> 

</tbody>
</table>
<% let numberOfItem =0;
let totalPrice =0;
%>

<% books.forEach(book => {%>
    <% carts.forEach((cart, index )=> {%>
        <% if(book.id == cart.bookid) {%> 
           <% numberOfItem += cart.quantity*1 %>
           <% totalPrice += book.price*1 %>
        <%}%>
    <%});%> 
<%});%> 
<table class="table">
    <tbody>
        
        <tr class="d-flex">
            <td class="col-sm-5"></td>
            <td class="col-sm-3">
            Items: <%= numberOfItem%>
            </td>
            <td class="col-sm-2">
               Total: $<%= totalPrice%>
            </td>
            
        </tr>
    </tbody>
</table>
